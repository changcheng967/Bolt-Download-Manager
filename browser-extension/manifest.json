{
  "manifest_version": 3,
  "name": "Bolt Download Manager",
  "version": "0.2.1",
  "description": "Integrate Bolt Download Manager with your browser for fast downloads",
  "permissions": [
    "downloads",
    "nativeMessaging",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Bolt Download Manager"
  },
  "context_menus": {
    "contexts": ["link"]
  }
}
